.Chat-main
  .Chat-main__group-info
    .Chat-main__group-info__left
      .Chat-main__group-info__left__group-name
        = @group.name
      .Chat-main__group-info__left__member-name
        %ul.group-name
          Memeber:
          %li 
            - @group.group_users.each do |group_user|
              = group_user.user.name
    
    .Chat-main__group-info__right
      = link_to edit_group_path(@group), class: "chat__edit" do
        Edit

  .Chat-main__message-list
    = render @messages


  .Chat-main__message-form
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .form__contents
        = f.text_field :content, class: 'message-box', placeholder: 'type a message'
        = f.label :image , class: 'input-box__image' do
          = icon('fas', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'message-btn'

